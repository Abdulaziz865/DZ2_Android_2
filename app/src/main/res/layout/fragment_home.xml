<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0C0C"
    tools:context=".fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#131212">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/ic_dehaze" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:text="Заметки"
            android:textAllCaps="false"
            android:textColor="#B1B1B1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="110dp"
            android:drawableStart="@drawable/shape" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/oval"
        android:backgroundTint="#191818"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="10dp"
        android:hint="Поиск заметок"
        android:paddingStart="20dp"
        android:textColorHint="#505050"
        android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/oval2"
            android:backgroundTint="#191818"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:text="Нужно сделать:"
            android:textColor="#B1B1B1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="150dp"
            android:text="Работы с проектом, сделать домашку, убраться и..."
            android:textColor="#B1B1B1"
            android:textSize="12dp" />

        <TextView
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="160dp"
            android:layout_marginBottom="170dp"
            android:text="6 июня 12:45"
            android:textColor="#616161"
            android:textSize="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/oval2"
        android:backgroundTint="#EBE4C9"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:text="Нужно сделать:"
        android:textColor="#A18D5D"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:paddingBottom="5dp"
        android:text="Работы с проектом, сделать домашку, убраться и..."
        android:textColor="#A18D5D"
        android:textSize="12dp" />

    <TextView
        android:layout_width="45sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="70dp"
        android:text="05.05.21 12:45"
        android:textColor="#A18D5D"
        android:textSize="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#D88B02"
        android:src="@drawable/ic_add" />

</FrameLayout>